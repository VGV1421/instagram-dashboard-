SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# INSTAGRAM GRAPH API (OPCIONAL - para cuenta propia)
# ============================================
# App ID y Secret de Meta for Developers
INSTAGRAM_APP_ID=your_app_id_here
INSTAGRAM_APP_SECRET=your_app_secret_here

# Long-lived Access Token (60 dias, renovable)
# Obtener de: Graph API Explorer > Generate Access Token
INSTAGRAM_ACCESS_TOKEN=IGQVJXabc123...

# Instagram User ID de la cuenta conectada
INSTAGRAM_USER_ID=17841400000000000

# Token de verificaci√≥n para webhooks (cualquier string secreto)
INSTAGRAM_WEBHOOK_VERIFY_TOKEN=mi_token_secreto_123

# ============================================
# APIFY (SCRAPING DE COMPETIDORES)
# ============================================
# API Token de Apify para scraping de Instagram
# Obtener de: https://console.apify.com/account/integrations
APIFY_API_TOKEN=apify_api_...

# ============================================
# OPENAI API (GENERACION DE CONTENIDO CON IA)
# ============================================
# API Key de OpenAI para analisis y generacion de contenido
# Obtener de: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Modelo a usar (recomendado: gpt-4o-mini para costo-eficiencia)
OPENAI_MODEL=gpt-4o-mini

# ============================================
# RESEND EMAIL SERVICE
# ============================================
# API Key de Resend para envio de notificaciones
# Obtener de: https://resend.com/api-keys
RESEND_API_KEY=re_123abc...

# Email desde donde se envian las alertas (usa tu dominio verificado o onboarding@resend.dev para pruebas)
RESEND_FROM_EMAIL=onboarding@resend.dev

# Email destino para notificaciones
ALERT_EMAIL_TO=tu@email.com

# ============================================
# N8N CONFIGURATION (AUTOMATIZACION)
# ============================================
# URL de tu instancia n8n (VPS o local)
N8N_URL=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# Credenciales basicas de n8n (si usas basic auth)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_password

# ============================================
# HEYGEN API (VIDEO AVATAR - OPCIONAL)
# ============================================
# API Key de HeyGen para generar videos con avatar
# Obtener de: https://app.heygen.com/settings?nav=API
HEYGEN_API_KEY=your_heygen_api_key

# ID del avatar personalizado (si tienes uno)
HEYGEN_AVATAR_ID=your_avatar_id

# ============================================
# ELEVENLABS API (VOZ - OPCIONAL)
# ============================================
# API Key de ElevenLabs para voz del avatar
# Obtener de: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# ID de la voz clonada (si tienes una)
ELEVENLABS_VOICE_ID=your_voice_id

# ============================================
# NOTION API (OPCIONAL)
# ============================================
# Integracion con Notion para buyer personas
NOTION_API_KEY=secret_...
NOTION_BUYER_PERSONAS_PAGE_ID=your_page_id
NOTION_REFERENTES_PAGE_ID=your_page_id

# ============================================
# APP CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Timezone (para cron jobs de n8n)
TZ=Europe/Madrid
