            },
            {
              "name": "budget_priority",
              "value": "={{$json.budget_priority || 'medium'}}"
            },
            {
              "name": "has_audio",
              "value": "={{$json.has_audio !== false}}"
            }
          ]
        },
        "options": {}
      },
      "id": "generate-smart-video",
      "name": "Generate Smart Video",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
